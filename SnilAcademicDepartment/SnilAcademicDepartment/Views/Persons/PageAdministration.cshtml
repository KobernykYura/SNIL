@using SnilAcademicDepartment.BusinessLogic.DTOModels;
@using SnilAcademicDepartment.Resources.PersonsResources;
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	@Styles.Render("~/Content/peoplecss");
}
<div class="container">
	<ol class="breadcrumb">
		<li>
			@Html.ActionLink(Resources.Resource.Home, "Index", "Home")
		</li>
		<li>
			@Html.ActionLink(Resources.Resource.Persons, "Persons", "Persons")
		</li>
		<li class="active">@PersonsResource.Administration</li>
	</ol>
</div>
<div class="container subpage">
	<h2>@PersonsResource.Administration</h2><br>
	@{
		foreach (var administrator in ViewData["Administrators"] as IList<Administrator>)
		{
			var imgSrcBlock = Url.Action("GetImage", new { controller = "Image", id = administrator.ImageId });
			var personPageUrl = Url.RouteUrl(new { action = "PersonalPage", controller = "Persons", id = administrator.Id });

			<div class="row row-student well">
				<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
					<a href="@personPageUrl">
						<img src="@imgSrcBlock" alt="@string.Format("{0} {1}",administrator.PersonName, administrator.SecoundName)" title="@string.Format("{0} {1}",administrator.PersonName, administrator.SecoundName)">
					</a>
				</div>
				<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
					<h4>@string.Format("{0} {1} {2}", administrator.PersonName, administrator.SecoundName, administrator.FathersName)</h4>
					<div class="container">
						@administrator.Biography
					</div>
				</div>
				<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 row3">
					<ul>
						<li><strong>@PersonsResource.Degree:</strong>  <span>@administrator.Degree</span> </li>
						<li><strong>@PersonsResource.AcademicTitle:</strong> <span>@administrator.AcademicTitle</span> </li>
						<li><strong>@PersonsResource.ProfessionStatus:</strong> <span>@administrator.ProfessionStatus</span> </li>
					</ul>
					<ul>
						<li><strong>@PersonsResource.EmailAddress:</strong>  <span>@administrator.EmailAddress</span> </li>
						<li><strong>@PersonsResource.PhoneNumber:</strong> <span>@administrator.PhoneNumber</span> </li>
					</ul>
				</div>
			</div>
		}
	}
</div>
