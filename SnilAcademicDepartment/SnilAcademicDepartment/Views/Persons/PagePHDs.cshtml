@using SnilAcademicDepartment.BusinessLogic.DTOModels;
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	@Styles.Render("~/Content/peoplecss");
}
<div class="container">
	<ol class="breadcrumb">
		<li>
			@Html.ActionLink(Resources.Resource.Home, "Index", "Home")
		</li>
		<li>
			@Html.ActionLink(Resources.Resource.Persons, "Persons", "Persons")
		</li>
		<li class="active">@Resources.PersonsResources.PersonsResource.PhD</li>
	</ol>
</div>
<div class="container subpage">
	<h2>@Resources.PersonsResources.PersonsResource.PhD</h2><br>
	@{
		foreach (var doctorOfPhilosophy in ViewData["PHD"] as IList<DoctorOfPhilosophy>)
		{
			var base64Block = Convert.ToBase64String(doctorOfPhilosophy.Image);
			var imgSrcBlock = String.Format("data:image/jpeg;base64,{0}", base64Block);
			var personPageUrl = Url.RouteUrl(new { action = "PersonalPage", controller = "Persons", id = doctorOfPhilosophy.Id });

			<div class="row row-student well">
				<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
					<a href="@personPageUrl">
						<img src="@imgSrcBlock" alt="@string.Format("{0} {1}",doctorOfPhilosophy.PersonName, doctorOfPhilosophy.SecoundName)" title="@string.Format("{0} {1}",doctorOfPhilosophy.PersonName, doctorOfPhilosophy.SecoundName)">
					</a>
				</div>
				<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
					<h4>@string.Format("{0} {1} {2}", doctorOfPhilosophy.PersonName, doctorOfPhilosophy.SecoundName, doctorOfPhilosophy.FathersName)</h4>
					<div class="container">
						@{
							if (doctorOfPhilosophy.Projects.Count() > 0)
							{
								@UlStringList(doctorOfPhilosophy.Projects, "Projects");
							}
							if (doctorOfPhilosophy.Seminars.Count() > 0)
							{
								@UlStringList(doctorOfPhilosophy.Seminars, "Seminars");
							}
						}
					</div>
				</div>
				<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 row3">
					<ul>
						<li><strong>Degree:</strong>  <span>@doctorOfPhilosophy.ProfessionStatus</span> </li>
						<li><strong>Academic title:</strong> <span>@doctorOfPhilosophy.ProfessionStatus</span> </li>
						<li><strong>Profession status:</strong> <span>@doctorOfPhilosophy.ProfessionStatus</span> </li>
					</ul>
					<ul>
						<li><strong>Email address:</strong>  <span>@doctorOfPhilosophy.EmailAddress</span> </li>
						<li><strong>Phone number:</strong> <span>@doctorOfPhilosophy.PhoneNumber</span> </li>
					</ul>
				</div>
			</div>
		}
	}
</div>

@helper UlStringList(IEnumerable<string> collection, string title)
{
	<div>
		<strong>@title:</strong>
		<ul>
			@foreach (var item in collection)
			{
				<li>@item</li>
			}
		</ul>
	</div>
}
