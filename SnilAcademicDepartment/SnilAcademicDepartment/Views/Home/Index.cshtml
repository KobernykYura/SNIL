@{
    ViewBag.Title = Resources.Resource.Home ;
}
@Styles.Render("~/Content/indexcss")
<div class="spma_title">
	<h2 class="title">@Resources.Resource.Title1<br>@Resources.Resource.Title2</h2>
</div>
<div class="container">
    <div class="rowimg">
        <div id="carousel-id" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel-id" data-slide-to="0" class=""></li>
                <li data-target="#carousel-id" data-slide-to="1" class=""></li>
                <li data-target="#carousel-id" data-slide-to="2" class="active"></li>
                <li data-target="#carousel-id" data-slide-to="3" class=""></li>
            </ol>
            <div class="carousel-inner">
                <div class="item">
                    <img data-src="holder.js/900x500/auto/#777:#7a7a7a/text:First slide" alt="First slide" src="~/img/Carousel/conferences.jpg">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>@Resources.Resource.SciProjects</h1>
                            <p style="font-size:14pt">@Resources.Resource.ProjectsIntro</p>
                            <p><a class="btn btn-lg btn-primary" href="@Url.RouteUrl(new { action = "Projects", controller = "Projects", })" role="button">@Resources.Resource.LearnMore</a></p>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img data-src="holder.js/900x500/auto/#666:#6a6a6a/text:Second slide" alt="Second slide" src="~/img/Carousel/cooperation.jpg">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>@Resources.Resource.Collaboration</h1>
                            <p style="font-size:14pt; background-color:rgba(150, 150, 150, 0.5)">@Resources.Resource.CollaborationIntro</p>
                            <p><a class="btn btn-lg btn-primary" href="@Url.RouteUrl(new { action = "Collaboration", controller = "Home", })" role="button">@Resources.Resource.LearnMore</a></p>
                        </div>
                    </div>
                </div>
                <div class="item active">
                    <img class="pict" data-src="holder.js/900x500/auto/#555:#5a5a5a/text:Third slide" alt="Third slide" src="~/img/Carousel/tools.jpg">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1></h1>
                            <p style="font-size:14pt"></p>
                            <p><a class="btn btn-lg btn-primary" href="#" role="button">@Resources.Resource.LearnMore</a></p>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img data-src="holder.js/900x500/auto/#666:#6a6a6a/text:Second slide" alt="Second slide" src="~/img/Carousel/cvbsu.jpg">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>CV.BSU.by</h1>
                            <p style="font-size:14pt">@Resources.Resource.CVInto<a href="http://cv.bsu.by/" target="_blank">http://cv.bsu.by/</a></p>
                            <p><a class="btn btn-lg btn-primary" href="http://cv.bsu.by/" target="_blank" role="button">@Resources.Resource.LearnMore</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#carousel-id" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
            <a class="right carousel-control" href="#carousel-id" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
        </div>
    </div>
    <div class="row row1 index-row">
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-4">
            <img src="../img/DSC_3577.jpg" alt="">
            <div class="projects">
                <h4>@Resources.Resource.SciProjects</h4>
                <p>@Resources.Resource.ProjectsShortDescription</p>
                @Html.ActionLink(Resources.Resource.LearnMore, "Projects", "Projects")
            </div>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-4">
            <img src="../img/DSC_3533.jpg" alt="">
            <div class="education">
                <h4>@Resources.Resource.Seminars</h4>
                <p>@Resources.Resource.SeminarsShortDescription</p>
                @Html.ActionLink(Resources.Resource.LearnMore, "Seminars", "Seminars")
            </div>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-4">
            <img src="../img/Conferences/IMG_3546.jpg" alt="">
            <div class="education">
                <h4>@Resources.Resource.Education</h4>
                <p>@Resources.Resource.EducationShortDescription</p>
                @Html.ActionLink(Resources.Resource.LearnMore, "Education", "Education")
            </div>
        </div>
    </div>
    <div class="row row1 index-row">
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-4">
            <img src="../img/IMG_4660.JPG" alt="">
            <div class="person">
                <h4>@Resources.Resource.Persons</h4>
                <p>@Resources.Resource.PeopleShortDescription</p>
                @Html.ActionLink(Resources.Resource.LearnMore, "Persons", "DepartmentStaff")
            </div>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-4">
            <img src="../img/DSC_3533.jpg" alt="">
            <div class="person">
                <h4>@Resources.Resource.SNIL</h4>
                <p>@Resources.Resource.SNILShortDescription</p>
                @Html.ActionLink(Resources.Resource.LearnMore, "ParticipantsPage", "ParticipantsSPMA")
            </div>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-4">
            <img src="../img/DSC_3607.jpg" alt="">
            <div class="description">
                <h4>@Resources.Resource.History</h4>
                <p>@Resources.Resource.HistoryShortDescription</p>
                @Html.ActionLink(Resources.Resource.LearnMore, "History", "History")
            </div>
        </div>
    </div>
</div>